{% extends 'base.html.twig' %}
{% block body %}
    <h1>Artist Shuffle!</h1>
    <h3 class="top-padding">Available Artists:</h3>
    {% for artist in artists %}
        <p class="lead top-padding">{{ artist.name }}</p>
        <p>Genre : {{ artist.genre.name }}</p>
    {% endfor %}
    <table>
        <tbody>
            <tr>
                <td><a href="{{ path('artists_add') }}">Add New Artist</a> |</td>
                <td><a href="{{ path('homepage') }}">Home</a></td>
            </tr>
        </tbody>
    </table>
{% endblock %}
