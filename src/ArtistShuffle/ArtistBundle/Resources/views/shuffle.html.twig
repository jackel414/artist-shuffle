{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-sm-4 col-sm-offset-4">
        <img src="{{ asset('images/logo.png') }}" alt="logo" height="200" width="200" />
        <h1 class="bottom-padding">Artist Shuffle!</h1>
        <p class="bottom-padding lead" id="artist_name">
            &nbsp;
            <div id="page_loading"><img src="images/ajax-loader.gif" height="60" width="60"/></div>
        </p>
        
        <div class="col-sm-12">
            {{ form_start(genre_form) }}
            {{ form_widget(genre_form) }}
            {{ form_end(genre_form) }}
        </div>
        <a class="btn btn-default" href="#" id="shuffle" role="button">Shuffle!</a>
        <table>
            <tbody>
                <tr>
                    <td class="text-right"><a href="{{ path('artists_index') }}">Artists</a> |</td>
                    <td class="text-left"><a href="{{ path('genres_index') }}">Genres</a></td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr class="text-center">
                    <td colspan="2" class="text-center"><a href="{{ path('logout') }}">Logout</a></td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
